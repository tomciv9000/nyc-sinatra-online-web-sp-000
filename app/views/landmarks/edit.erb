<h2>Edit Historical Landmark</h2>

<h2>Edits for <%= @landmark.name %></h2>

  <form action="/landmarks/<%= @landmark.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name</label>
    <br>
    <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>">
    <br>
    <label for="Year Completed">Year Completed</label></br>
    <input type="text" id = "year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"></br>
    <br>
    <p>Select an existing figure or create a new one below.</p>

    <h3>Existing Figures</h3>
    <% @figures.each do |figure| %>
      <input type="radio" name="landmark[figure_id][]" id="figure_<%=figure.id%>" value="<%= figure.id %>" <%='checked' if @landmark.figure_id=figure.id %>><%= figure.name %></input><br>
    <% end %>
    <br>

    <h3>New Figure</h3>
    <label>New Figure</label>
    <br>
    <input type="text" name="figure[name]" id="new_figure"></input>
    <br><br>

    <input type="submit" id="Edit Landmark">

  </form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
